<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        >

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/timeProfile"
            android:padding="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/other2"
            app:civ_border_color="#9C27B0"
            app:civ_border_width="4dp"
            app:civ_shadow_radius="10dp"
            app:civ_shadow_color="#3f51b5"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/timeName"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dot_24"
            android:layout_gravity="center"
            android:id="@+id/optionButton"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/postId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToOutline="true"
        android:src="@drawable/friday"
        android:adjustViewBounds="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loveId"
            android:padding="8dp"
            android:src="@drawable/love_24"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/redLove"
            android:src="@drawable/red_love_24"
            android:visibility="gone"
            android:padding="8dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comments"
            android:src="@drawable/baseline_comment_24"
            android:padding="8dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shareId"
            android:src="@drawable/screen_share_24"
            android:padding="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/saveId"
                android:layout_alignParentRight="true"
                android:src="@drawable/bookmark_border_24"
                android:padding="8dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/unsaveId"
                android:src="@drawable/bookmark_24"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:padding="8dp"

                />

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="Hello"
        android:id="@+id/reactCountId"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="Hello"
        android:id="@+id/descriptionId"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        >

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/myImage"
            android:padding="3dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/other2"
            app:civ_border_color="#9C27B0"
            app:civ_border_width="4dp"
            app:civ_shadow_radius="10dp"
            app:civ_shadow_color="#3f51b5"
            >

        </com.mikhaellopez.circularimageview.CircularImageView>

        <EditText
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColorHint="#CDC7C7"
            android:background="@drawable/rounded_corner"
            android:padding="20dp"
            android:paddingLeft="10dp"
            android:hint="add a commnet"
            android:textSize="15sp"
            />

    </LinearLayout>




</LinearLayout>